{
  "name": "static-html-bulma-website",
  "version": "1.0.1",
  "description": "",
  "main": "src/index.js",
  "watch": {
    "html-build-dev": {
      "patterns": [
        "src/html"
      ],
      "extensions": "html",
      "quiet": false
    },
    "js-build-dev": {
      "patterns": [
        "src/js"
      ],
      "extensions": "js",
      "quiet": false
    },
    "css-build-dev": {
      "patterns": [
        "src/sass"
      ],
      "extensions": "scss",
      "quiet": false
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm-watch",
    "clean": "del public/dist/*",
    "build": "npm run html-build-dev && npm run js-build-dev && npm run css-build-dev",
    "build-prod": "npm run html-build-prod && npm run js-build-prod && npm run css-build-prod",
    "js-build-dev": "browserify src/js/main.js -o public/dist/js/bundle.$npm_package_version.js",
    "js-build-prod": "npm run js-build-dev && uglifyjs public/dist/js/bundle.$npm_package_version.js -o public/dist/js/bundle.$npm_package_version.js",
    "css-build-dev": "node-sass --omit-source-map-url src/sass/styles.scss public/dist/css/styles.$npm_package_version.css",
    "css-build-prod": "node-sass --omit-source-map-url src/sass/styles.scss public/dist/css/styles.$npm_package_version.css --output-style compressed",
    "html-build-dev": "html-includes --src src/html --dest public",
    "html-build-prod": "html-includes --src src/html --dest public --minify"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cash-dom": "^8.1.1",
    "js-cookie": "^3.0.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.0.0",
    "browserify": "^17.0.0",
    "bulma": "^0.9.3",
    "del-cli": "^4.0.1",
    "html-includes": "^4.4.1",
    "node-sass": "^7.0.1",
    "npm-watch": "^0.11.0",
    "sass": "^1.49.8",
    "uglify-js": "^3.15.4"
  }
}
