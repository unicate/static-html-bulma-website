{
  "name": "static-html-bulma-website",
  "version": "1.0.2",
  "description": "",
  "main": "src/index.js",
  "watch": {
    "dev:build:html": {
      "patterns": [
        "src/html"
      ],
      "extensions": "html",
      "quiet": false
    },
    "dev:build:js": {
      "patterns": [
        "src/js"
      ],
      "extensions": "js",
      "quiet": false
    },
    "dev:build:css": {
      "patterns": [
        "src/sass"
      ],
      "extensions": "scss",
      "quiet": false
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "del public/dist/*",
    "dev": "npm-watch",
    "dev:build:js": "browserify src/js/main.js -o public/dist/js/bundle.js",
    "dev:build:css": "node-sass --omit-source-map-url src/sass/styles.scss public/dist/css/styles.css",
    "dev:build:html": "html-includes --src src/html --dest public",
    "dev:build": "npm run dev:build:js && npm run dev:build:css && npm run dev:build:html",
    "prod:build:js" : "npm run dev:build:js && uglifyjs public/dist/js/bundle.js -o public/dist/js/bundle.js",
    "prod:build:css" : "node-sass --omit-source-map-url src/sass/styles.scss public/dist/css/styles.css --output-style compressed",
    "prod:build:html": "html-includes --src src/html --dest public --minify",
    "prod:build": "npm run prod:build:js && npm run prod:build:css && npm run prod:build:html",
    "versioning" : "node ./src/build/versioning.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cash-dom": "^8.1.1",
    "js-cookie": "^3.0.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.0.0",
    "browserify": "^17.0.0",
    "bulma": "^0.9.3",
    "del-cli": "^4.0.1",
    "html-includes": "^4.4.1",
    "node-sass": "^7.0.1",
    "npm-watch": "^0.11.0",
    "replace-in-file": "^6.3.2",
    "sass": "^1.49.8",
    "uglify-js": "^3.15.4"
  }
}
